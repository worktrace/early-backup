{
  // General normalizations.
  "files.encoding": "utf8",
  "files.eol": "\n",
  "editor.tabSize": 2,
  "editor.rulers": [80],

  // Auto format on save (requires recommended extensions).
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": { "source.organizeImports": "always" },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[toml]": { "editor.defaultFormatter": "tamasfe.even-better-toml" },
  "[dart]": { "editor.defaultFormatter": "Dart-Code.dart-code" },
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer",
    "editor.tabSize": 4
  },

  // File nesting patterns (enable as you wish locally).
  "explorer.fileNesting.patterns": {
    "pubspec.yaml": "pubspec.lock, .metadata",
    "package.json": "pnpm-lock.yaml",
    "Cargo.toml": "Cargo.lock",
    "readme.md": "license"
  },

  "files.associations": {
    ".metadata": "yaml"
  },

  // Code spell checker (requires recommended extensions).
  "cSpell.ignorePaths": [
    ".dart_tool",
    "locales",
    "node_modules",
    "target",
    ".metadata",
    "Cargo.lock",
    "pnpm-lock.yaml",
    "pubspec.lock",
    "LICENSE",
    "*.svg"
  ],
  "cSpell.words": [
    "combinators",
    "esbenp",
    "futureor",
    "interps",
    "ints",
    "lerp",
    "lockfiles",
    "ltr",
    "ltwh",
    "mulan",
    "nonobvious",
    "oxlint",
    "pixmap",
    "pubspec",
    "resvg",
    "rtl",
    "skia",
    "squircle",
    "swiftpm",
    "symbolication",
    "tamasfe",
    "tearoffs",
    "thiserror",
    "unawaited",
    "usvg",
    "worktrace"
  ]
}
