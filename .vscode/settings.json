{
  // General normalizations.
  "files.encoding": "utf8",
  "files.eol": "\n",
  "editor.tabSize": 2,
  "editor.rulers": [80, 100],

  // Auto format on save (requires recommended extensions).
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": { "source.organizeImports": "always" },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[proto3]": { "editor.defaultFormatter": "xaver.clang-format" },
  "[toml]": { "editor.defaultFormatter": "tamasfe.even-better-toml" },
  "[dart]": { "editor.defaultFormatter": "Dart-Code.dart-code" },
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer",
    "editor.tabSize": 4
  },

  // Specify style for clang-format for proto buffers.
  "clang-format.fallbackStyle": "LLVM",

  // File nesting patterns (enable as you wish locally).
  "explorer.fileNesting.patterns": {
    ".flutter-plugins": ".flutter-plugins-dependencies",
    "pubspec.yaml": "pubspec.lock, .metadata, .flutter-plugins",
    "package.json": "pnpm-lock.yaml",
    "Cargo.toml": "Cargo.lock",
    "readme.md": "license, license.*",
    "*.dart": "${capture}.*.g.dart",
    "*.ts": "${capture}.d.ts",
    "*.js": "${capture}.js.map",
    "*.cjs": "${capture}.cjs.map",
    "*.d.ts": "${capture}.js, ${capture}.cjs, ${capture}.d.ts.map"
  },

  // Special files.
  "files.associations": {
    ".metadata": "yaml",
    ".flutter-plugins-dependencies": "json",
    "*.js.map": "json",
    "*.cjs.map": "json",
    "*.d.ts.map": "json"
  },
  "editor.wordWrapColumn": 80,
  "[javascript]": { "editor.wordWrap": "wordWrapColumn" },
  "[json]": { "editor.wordWrap": "wordWrapColumn" },

  // Code spell checker (requires recommended extensions).
  "cSpell.ignorePaths": [
    ".dart_tool",
    "out",
    "locales",
    "node_modules",
    "target",
    ".metadata",
    "Cargo.lock",
    "pnpm-lock.yaml",
    "pubspec.lock",
    "LICENSE",
    "*.svg"
  ],
  "cSpell.words": [
    "appiconset",
    "combinators",
    "cupertino",
    "esbenp",
    "esbuild",
    "futureor",
    "hdpi",
    "interps",
    "ints",
    "lerp",
    "lockfiles",
    "ltr",
    "ltwh",
    "mdpi",
    "mulan",
    "nonobvious",
    "oxlint",
    "pixmap",
    "pngs",
    "pubspec",
    "resvg",
    "rtl",
    "skia",
    "squircle",
    "swiftpm",
    "symbolication",
    "tamasfe",
    "tearoffs",
    "thiserror",
    "tokei",
    "unawaited",
    "usvg",
    "vscodeignore",
    "worktrace",
    "xaver",
    "xcassets",
    "xcconfig",
    "xhdpi",
    "xxhdpi",
    "xxxhdpi"
  ]
}
