{
  // General normalizations.
  "files.encoding": "utf8",
  "files.eol": "\n",
  "editor.tabSize": 2,
  "editor.rulers": [80],

  // Auto format on save (requires recommended extensions).
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": { "source.organizeImports": "always" },
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // Code spell checker (requires recommended extensions).
  "cSpell.ignorePaths": ["node_modules", "pnpm-lock.yaml"],
  "cSpell.words": ["esbenp", "lockfiles", "oxlint", "worktrace"]
}
