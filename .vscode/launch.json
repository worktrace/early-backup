{
  // see https://code.visualstudio.com/docs/debugtest/debugging-configuration
  "configurations": [
    {
      // Override default launch path provided by the Flutter extension,
      // because the Flutter app is not at the root of the workspace.
      //
      // see https://docs.flutter.dev/tools/vs-code#running-and-debugging
      // see https://docs.flutter.dev/tools/devtools/vscode#run-and-debug
      // see https://dartcode.org/docs/launch-configuration/
      "name": "Flutter App",
      "type": "dart",
      "request": "launch",
      "program": "${workspaceFolder}/apps/flutter/lib/main.dart",
      "cwd": "${workspaceFolder}/apps/flutter"
    },
    {
      "name": "Flutter Stories",
      "type": "dart",
      "request": "launch",
      "program": "${workspaceFolder}/apps/flutter/lib/stories.dart",
      "cwd": "${workspaceFolder}/apps/flutter"
    },
    {
      // Launch VSCode extension in the output folder.
      // In this mode, hot update of themes are not available.
      //
      // see https://code.visualstudio.com/docs/configure/command-line
      // see https://code.visualstudio.com/api/get-started/your-first-extension
      // see https://code.visualstudio.com/api/advanced-topics/extension-host
      "name": "VSCode Extension",
      "type": "extensionHost",
      "request": "launch",
      "preLaunchTask": "npm: build - apps/vscode",
      "cwd": "${workspaceFolder}/apps/vscode/out",
      "args": [
        "${workspaceFolder}/apps/vscode/example",
        "--extensionDevelopmentPath=${workspaceFolder}/apps/vscode/out"
      ]
    },
    {
      // Launch VSCode extension in the source folder.
      // This launcher is designed to develop the themes.
      // Scripts are not available in this mode.
      "name": "VSCode Themes",
      "type": "extensionHost",
      "request": "launch",
      "cwd": "${workspaceFolder}/apps/vscode",
      "args": [
        "${workspaceFolder}/apps/vscode/example",
        "--extensionDevelopmentPath=${workspaceFolder}/apps/vscode"
      ]
    }
  ]
}
